{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 160,
    "indentWidth": 2,
    "lineEnding": "lf",
    "indentStyle": "tab"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "all",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "jsxQuoteStyle": "single",
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "ignore": [
      "scripts/**/*.js"
    ]
  }
}