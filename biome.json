{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 160,
    "indentWidth": 2,
    "lineEnding": "lf",
    "indentStyle": "tab"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "all",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "jsxQuoteStyle": "single",
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
    "files": {
      "include": [
        "scripts/**/*.js",
        "src/**/*.js"
      ],
      "ignore": [
        "scripts/**/*.js"
      ]
    }
}